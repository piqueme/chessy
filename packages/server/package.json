{
  "name": "@chessy/server",
  "private": true,
  "packageManager": "yarn@3.0.2",
  "devDependencies": {
    "@types/jest": "^27.0.2",
    "@types/node": "^16.9.2",
    "@types/uuid": "^8.3.1",
    "tsc-watch": "^4.5.0"
  },
  "main": "build/server.js",
  "files": [
    "build"
  ],
  "scripts": {
    "build": "yarn g:tsc -p tsconfig.json",
    "clean": "rm -rf ./build && rm tsconfig.tsbuildinfo",
    "dev": "yarn tsc-watch --onSuccess \"node ./build/server.js\"",
    "test": "yarn g:test --selectProjects @chessy/server",
    "serve": "yarn node build/server.js"
  },
  "dependencies": {
    "@chessy/core": "workspace:packages/core",
    "fastify": "^3.22.0",
    "fastify-cors": "^6.0.2",
    "uuid": "^8.3.2"
  }
}
