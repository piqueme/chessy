{
  "name": "@chessy/server",
  "private": true,
  "packageManager": "yarn@3.0.2",
  "devDependencies": {
    "@types/jest": "^27.0.2",
    "@types/node": "^16.9.2",
    "@types/url-join": "^4.0.1",
    "@types/uuid": "^8.3.1",
    "graphql-request": "^3.7.0",
